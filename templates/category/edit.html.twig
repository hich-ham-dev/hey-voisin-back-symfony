{% extends 'base.html.twig' %}

{% block title %}Modifier une catégorie
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-5 bg-secondary bg-gradient rounded-5 p-3 text-light text-center">Modifier la catégorie
			<span class="badge rounded-pill text-bg-success">{{ category.id }}</span>
		</h1>
		<span>
			<turbo-frame id="category_{{ category.id }}">
				{{ include('category/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
			</turbo-frame>
		</span>

		<a href="{{ path('app_category_index') }}" class="btn btn-secondary m-1 btn-sm rounded-pill">Retour</a>

		{{ include('category/_delete_form.html.twig') }}
	</div>
{% endblock %}
